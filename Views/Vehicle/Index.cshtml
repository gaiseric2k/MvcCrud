@model IEnumerable<MvcCrud.Models.Vehicle>

@{
    ViewBag.Title = "Index";
}

<body>
    <div class="jumbotron">
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transmission)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Transmission)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.VehicleID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.VehicleID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.VehicleID })
                    </td>
                </tr>
            }

        </table>
        </div>
</body>